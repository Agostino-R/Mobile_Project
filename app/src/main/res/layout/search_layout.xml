<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@color/red_custom">

    <EditText
        android:id="@+id/search_content"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Search"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textColor="@color/grey_back_custom"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="50dp"
        android:background="@drawable/fond_liste"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/launch_search_button"
        android:background="@drawable/bouton"
        android:text="Search"
        android:layout_toRightOf="@id/search_content"/>

</RelativeLayout>