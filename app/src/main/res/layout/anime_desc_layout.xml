<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:id="@+id/image_for_desc"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score_text"
                android:text="Score :"
                android:layout_toLeftOf="@+id/image_for_desc"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/desc_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/score_text"
                android:layout_alignLeft="@+id/score_text"
                android:layout_marginTop="10dp"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/title_desc"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@+id/image_for_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/addToToWatchList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_desc"
                android:background="@color/colorPrimary"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="100dp"
                android:text="+      Add"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>