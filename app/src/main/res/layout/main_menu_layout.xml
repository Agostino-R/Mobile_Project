<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_menu">

    <Button
        android:id="@+id/top_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bouton"
        android:fontFamily="@font/main_menu_font"
        android:text="Top Anime" />

    <Button
        android:id="@+id/season_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/top_button"
        android:background="@drawable/bouton"
        android:layout_marginHorizontal="80dp"
        android:fontFamily="@font/main_menu_font"
        android:layout_marginTop="40dp"
        android:text="Season Anime" />

    <Button
        android:id="@+id/schedule_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/season_button"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/main_menu_font"
        android:background="@drawable/bouton"
        android:text="Schedule" />

    <Button
        android:id="@+id/upcoming_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/schedule_button"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/main_menu_font"
        android:background="@drawable/bouton"
        android:text="Upcoming Anime" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/upcoming_button"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/main_menu_font"
        android:background="@drawable/bouton"
        android:text="Search Anime" />

    <Button
        android:id="@+id/to_watch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/main_menu_font"
        android:layout_below="@+id/search_button"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bouton"
        android:text="Anime To Watch" />

</RelativeLayout>