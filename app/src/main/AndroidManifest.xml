<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobile_project">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:windowSoftInputMode="stateHidden"
        android:icon="@drawable/acu_splash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/launchStyle">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".View.TopActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" />

        <activity
            android:name=".View.AnimeDescActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />

        <activity
            android:name=".View.SchedActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />

        <activity
            android:name=".View.SearchActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />

        <activity
            android:name=".View.SeasonActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />

        <activity
            android:name=".View.UpcomingActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />

        <activity
            android:name=".View.ToWatchActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />

        <activity
            android:name=".View.MainMenuActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />
        <activity
            android:name=".View.LoadingActivity"
            android:screenOrientation="portrait"
            android:label="Mobile_Project" />

        <service android:name=".Model.MessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="Model.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>